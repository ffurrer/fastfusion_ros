<?xml version="1.0" encoding="ISO-8859-15"?>
<launch>
	<arg name="camera_prefix" value="/picoflexx/cam0"/>
	
	<!-- Run Bagfile -->
     <node pkg="rosbag" type="play" name="player" output="screen"   
      args="-r 2.0 /home/karrer/Desktop/Dataset3/2016_Jan_09/Picoflexx/Desk/Mode1/desk_mode1_run1.bag" />
 
	<!-- Run rovio -->
     <!--node  name="rovio" pkg="rovio" type="test_rovio"     
     clear_params="true" output="screen" --> 
     <!--node-->

	<!-- Run fastfusion_node-->
	<node  name="fastfusion_node" pkg="fastfusion_node" type="fastfusion_node" clear_params="true" output="screen">
		<remap from="image_depth"		to="$(arg camera_prefix)/depth/image_raw" />
		<remap from="image_conf"		to="$(arg camera_prefix)/confidence/image_raw" />
		<remap from="image_noise" 		to="$(arg camera_prefix)/noise/image_raw" />
		<remap from="point_cloud" 		to="$(arg camera_prefix)/pcl"/>
	<!-- Load parameters -->
 	<rosparam file="$(find fastfusion_node)/cfg/params.yaml"/> 
	<rosparam file="$(find fastfusion_node)/cfg/camchain_pico.yaml"/>
	</node>
	
	
      
	<!--node  name="$(arg slam_name)" pkg="slam_simulation_node" type="slam_simulation_node" clear_params="true" output="screen" -->
