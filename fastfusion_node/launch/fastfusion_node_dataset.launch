<?xml version="1.0" encoding="ISO-8859-15"?>
<launch>
	<arg name="slam_name" value="camera"/>
	
	<!-- Run Bagfile -->
     <node pkg="rosbag" type="play" name="player"    
      args="--clock --r 1.0 /home/johnny/rosbag_2016/realsense_bagfiles/_2016-04-14-21-19-37.bag" />
 
	<!-- Run rovio -->
     <!--node  name="rovio" pkg="rovio" type="test_rovio"     
     clear_params="true" output="screen" --> 
     <!--node-->

	<!-- Run fastfusion_node-->
	<node  name="fastfusion_node" pkg="fastfusion_node" type="fastfusion_node" clear_params="true" output="screen">
		<remap from="image_rgb"			to="$(arg slam_name)/rgb/image_raw" />
		<remap from="image_depth"		to="$(arg slam_name)/depth/image_raw" />
		<remap from="point_cloud" 	to="$(arg slam_name)/depth/points" />
	<!-- Load parameters -->
 	<rosparam file="$(find fastfusion_node)/cfg/params.yaml"/> 
	<rosparam file="$(find fastfusion_node)/cfg/camchain_realsense.yaml"/>
	</node>
	
	
      
	<!--node  name="$(arg slam_name)" pkg="slam_simulation_node" type="slam_simulation_node" clear_params="true" output="screen" -->
