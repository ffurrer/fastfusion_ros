		<!--remap from="/ref"				to="/world" -->
		<!--param name="undistort_images" value="true"-->
		<!-- Load parameters -->
		<!--rosparam file="$(find slam_simulation_node)/cfg/params.yaml" -->
	<!--node-->
</launch>
